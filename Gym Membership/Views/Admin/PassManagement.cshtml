@model IEnumerable<Gym_Membership.Models.Membership>

@{
    ViewBag.Title = "Pass Management";
}

<h2 class="admin">PassManagement</h2>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index")">Home</a></li>
    <li class="active">Pass Management</li>
</ol>

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.MembershipCode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th></th>


        </tr>

        @foreach (var item in Model)
        {
            using (Html.BeginForm("UpdatePassPrice", "Admin", FormMethod.Post, null))
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.MembershipCode)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>

                        <input type="hidden" value="@item.MembershipCode" name="key" />
                        <input type="text" class="form-control" name="value" value="@item.Fee" />

                    </td>
                    <td>
                        <input type="submit" class="btn btn-sm btn-primary" value="save" />
                    </td>

                </tr>
            }
        }

    </table>
